#Base background and foreground colors - should have good contrast
BG=F0F0F0
FG=4a4a4a

#GTK Menu background and foreground colors - should have good contrast
MENU_BG=d9d9d9
MENU_FG=4a4a4a

#Cinnamon Main background and foreground colors - should have good contrast
CINN_BG=F0F0F0
CINN_FG=4a4a4a

#Selected item background and foreground colors - should have good contrast
SEL_BG=9ab87c	 	
SEL_FG=ffffff

#Button background and foreground colors - should have good contrast
BTN_BG=F0F0F0
BTN_FG=4a4a4a

#Header bar button background and foreground colors - should have good contrast
HDR_BTN_BG=F0F0F0
HDR_BTN_FG=4a4a4a

#Text box background and foreground colors - should have good contrast
TXT_BG=ffffff
TXT_FG=4a4a4a

#Caret color for text entry box.
CARET1_FG=dadada
CARET_SIZE=0.05	

#Special colors used in themes. SPECIAL_FG_COLOR should have reasonable contrast with INFO, SUCCESS, WARNING, and ERROR COLORS
#Typically INFO would be a shade of Blue, SUCCESS - Green, WARNING - Orange and ERROR - Red.
LINK_COLOR=81a65b
SPECIAL_FG_COLOR=ffffff
INFO_BG_COLOR=55c1ec
SUCCESS_COLOR=73d216
WARNING_COLOR=f27835
ERROR_COLOR=FC4138

#Color used for checkbox, radio button and toggles. If in doubt use the same value as SEL_BG
ACCENT_BG=9ab87c

#Window Manager focused and unfocused borders
WM_BORDER_FOCUS=454545
WM_BORDER_UNFOCUS=383838

#Other theme attributes
NAME=Mint-Y
CINNAMON_OPACITY=1.0			#opacity of Cinnamon theme - value between 0 and 1 required
GRADIENT=0.1					#gradient modifier - value between 0 and 1 recommended. Values in excess of 2 may cause errors when building the theme
ROUNDNESS=2 					#roundness of widgets - value between 0 and 20 required
SPACING=4						#spacing of GTK elements - value between 0 and 20 required

#These attributes allow you to vary the position of the Cinnamon notification.
#Values are in pixels from the default position near the top of the screen and the right edge of the screen.
#Please bear in mind that the visual effect of these attributes is screen resolution specific.
NOTIFICATION_MARGIN_TOP=0
NOTIFICATION_MARGIN_RIGHT=20
